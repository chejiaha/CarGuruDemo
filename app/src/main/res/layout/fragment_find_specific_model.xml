    <Spinner
        android:id="@+id/spTrim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/white_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spModel" />

    <Button
        android:id="@+id/btnFindSpecificModelSearch"
        android:layout_width="96dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:text="@string/search_button"
        android:textColor="@color/grey_background"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spYear" />

    <ProgressBar
        android:id="@+id/pbLoadingFindSpecificModel"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="161dp"
        android:layout_height="237dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/orange_text"
        android:indeterminateTintMode="src_atop"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFindSpecificModelRightInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:padding="5dp"
        android:text="-Approximagte Mechanical Costs \n -Approximate Yearly Costs"
        android:textColor="@color/orange_text"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFindSpecificModelSearch" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="88dp"
        android:text="Make"
        android:textColor="@color/white_text"
        app:layout_constraintEnd_toStartOf="@+id/spMake"
        app:layout_constraintTop_toBottomOf="@+id/tvFindSpecificModelTitle" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="84dp"
        android:text="Model"
        android:textColor="@color/white_text"
        app:layout_constraintEnd_toStartOf="@+id/spModel"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="92dp"
        android:text="Trim"
        android:textColor="@color/white_text"
        app:layout_constraintEnd_toStartOf="@+id/spModel"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="92dp"
        android:text="Year"
        android:textColor="@color/white_text"
        app:layout_constraintEnd_toStartOf="@+id/spModel"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

