<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/questionnairesplashpageimg1">

    <TextView
        android:id="@+id/tvFindACarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Find Your Car!"
        android:textSize="25dp"
        android:fontFamily="@font/bevan"
        android:textColor="@color/orange_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tvFindACarGuruImage"
        android:layout_width="303dp"
        android:layout_height="126dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/car_guru_maskot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFindACarTitle" />

    <TextView
        android:id="@+id/tvFindACarForYouDescription"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="Clicking Start will Bring you to a questionnaire that will determine the best cars for your needs"
        android:textColor="@color/white_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFindACarGuruImage" />

    <ImageView
        android:id="@+id/ivStartQuestionnaire"
        android:layout_width="225dp"
        android:layout_height="156dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/questionnairestartbutton1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFindACarForYouDescription" />

    <Button
        android:id="@+id/btnViewByCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="Search By Category"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivStartQuestionnaire" />

    <Button
        android:id="@+id/btnViewPreviousResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="28dp"
        android:text="View Previous Results"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivStartQuestionnaire" />

</androidx.constraintlayout.widget.ConstraintLayout>